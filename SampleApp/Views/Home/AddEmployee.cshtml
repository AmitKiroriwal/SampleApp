@model Employee;
@{
    ViewData["Title"] = "Add Record";
}

<div class=" register">
    <div class="row">
        <div class="col-md-3 register-left">
            <img src="https://image.ibb.co/n7oTvU/logo_white.png" alt="" />
            <h3>Welcome</h3>
            <p>You can now add, update, delete and manage your records here!</p>
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary" role="button">View Records </a>
            <br />
        </div>

        <div class="col-md-9 register-right">
            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                <h3 class="register-heading">Create an Account</h3>
                <form asp-controller="Home" asp-action="AddEmployee" method="post">
                    <div class="row register-form">
                        <div class="col-md-12 register-right">
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Full Name *" asp-for="Employee_Name" />
                                <span asp-validation-for="Employee_Name"></span>
                            </div>


                            <div class="form-group">
                                <input type="email" class="form-control" placeholder="Your Email *" asp-for="Email" />
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div class="form-group">
                                <input type="number" class="form-control" placeholder="Your Age *" asp-for="Age" />
                                <span asp-validation-for="Age"></span>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" placeholder="Your Designation *" asp-for="Designation" />
                                <span asp-validation-for="Designation"></span>
                            </div>
                            <div class="form-group">
                                <select class="form-control" id="country" asp-for="Gender">
                                    <option value="">----Select----</option>
                                    <option value="Male">Male</option>
                                    <option value="Female">Female</option>
                                    <option value="Others">Others</option>
                                </select>
                                <span asp-validation-for="Gender"></span>
                            </div>
                            <div class="form-group">
                                <input type="checkbox" asp-for="Emp_Status"  id="Status">
                                <span asp-validation-for="Emp_Status"></span>
                            </div>
                            <input type="Reset" class="btnRegister1" value="Reset" />
                            <input type="submit" class="btnRegister" value="Register" />
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

